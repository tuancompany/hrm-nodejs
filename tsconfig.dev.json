{
  "compilerOptions": {
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "removeComments": true,
    "strictNullChecks": false,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "ES6",
    "baseUrl": "."
  },
  "compileOnSave": true,
  "include": ["src"]
}
